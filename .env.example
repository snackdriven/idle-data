# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Database Configuration (Encore handles this automatically in most cases)
# DATABASE_URL=postgresql://username:password@localhost:5432/idle_data

# Encore Configuration
# ENCORE_APP_ID=your-app-id
# ENCORE_ENV=local

# Frontend Configuration
# NEXT_PUBLIC_API_URL=http://localhost:4000

# Optional: External Services
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Development Mode
NODE_ENV=development

# Optional: Logging Level
# LOG_LEVEL=info

# Optional: Rate Limiting Configuration
# RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Optional: Session Configuration
# SESSION_SECRET=your-super-secret-session-key

# Optional: External Monitoring Services
# SENTRY_DSN=https://your-sentry-dsn
# ANALYTICS_ID=your-analytics-id